{% extends 'baseWOHeader.html.twig' %}

{% block title %}{{ user.login }}{% endblock %}

{% block body %}
    <div class="container">
        <div class="boutons">
            <span id="profil">Profil</span>
            {% if app.session.get('user') and user.login == app.session.get('user').login %}
                <span id="parametres">Paramètres</span>
                <span id="commandes">Commandes</span>
            {% endif %}
        </div>

        <div class="onglets">
            <div id="profil">
                <div class="utilisateur">
                    <h2>{{ user.login }}</h2>
                </div>

                <div class="resume">
                    <ul>
                        {% if user.section %}
                            <li>
                                <a href="{{ path('app_sections', {section:user.section.nom}) }}">{{ user.section.nom }}</a>
                            </li>
                            <li><em>{{ user.grade.nom }}</em></li>
                        {% else %}
                            <li>Dans aucune section</li>
                        {% endif %}
                    </ul>
                </div>
            </div>
            {% if app.session.get('user') and user.login == app.session.get('user').login %}
                <div id="parametres">
                    {{ form_start(form) }}
                    {{ form_widget(form) }}
                    <button type="submit">Modifier</button>
                    {{ form_end(form) }}
                </div>

                <div id="commandes">
                    {% if commandes is empty %}
                        <p>Aucune commande</p>
                    {% else %}
                        <table>
                            <tr>
                                <th>Produit</th>
                                <th>Quantité</th>
                                <th>Date</th>
                                <th>Réalisée</th>
                            </tr>
                            {% for commande in commandes %}
                                <tr>
                                    <td>
                                        <a href="{{ path('app_show_product', {id: commande.produit.id}) }}">{{ commande.produit.nom }}</a>
                                    </td>
                                    <td>{{ commande.quantite }}</td>
                                    <td>{{ commande.date.format('l j F Y à H:i:s') }}</td>
                                    <td>{% if commande.realise %}Oui{% else %}Non{% endif %}</td>
                                </tr>
                            {% endfor %}
                        </table>
                    {% endif %}
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script type="text/javascript">
        let boutons = document.querySelectorAll('.boutons > span');
        let onglets = document.querySelectorAll('.onglets > div');

        for (let i = 0; i < boutons.length; i++) {
            boutons[i].addEventListener('click', changeOnglet);
        }

        function changeOnglet(event) {
            setOnglet(event.target.id);
        }

        function setOnglet(id) {
            if (onglets.length === boutons.length) {
                for (let i = 0; i < onglets.length; i++) {
                    if (onglets[i].id === id) {
                        onglets[i].style.display = 'block';
                    } else {
                        onglets[i].style.display = 'none';
                    }
                }
            }
        }

        setOnglet('profil');
    </script>
{% endblock %}